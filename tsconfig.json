{
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitThis": false,
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "pretty": true,
    "strict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  }
}
